# frozen_string_literal: true
source "https://rubygems.org"
ruby "2.4.1"

# Obviously since our app is a Sinatra app we need Sinatra
gem "sinatra", "~> 2.0.0"
# Include the Sinatra contrib gem so we have access to things like
# the reloader
gem "sinatra-contrib", "~> 2.0.0"

# Assets
# Use sprockets to handle asset compilation
gem "sprockets", "~> 3.7.1"

# Use Sass obviously
gem "sass"
